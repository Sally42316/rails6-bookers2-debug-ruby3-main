<% if users.present? %>
  <% users.each do |user| %>
    <% if current_user == user %> <!-- ログイン中のユーザー（自分）のみを表示する条件 -->
      <table>
        <tbody>
          <tr>
            <td>フォロー数: <%= current_user.followings.count %></td>
            <td>　</td>
            <td>フォロワー数: <%= current_user.followers.count %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>
